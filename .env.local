# Development Environment Configuration
COMPOSE_PROJECT_NAME=xians-community-edition
ENVIRONMENT=local
ENVIRONMENT_SUFFIX=

# Images (development versions)
SERVER_IMAGE=99xio/xiansai-server:latest
UI_IMAGE=99xio/xiansai-ui:latest

# ASP.NET Core Environment
ASPNETCORE_ENV=Development

# MongoDB Configuration
MONGO_SCRIPT_PATH=./db/mongo-healthcheck.js
MONGO_SCRIPT_MOUNT=/mongo-healthcheck.js
MONGO_HEALTHCHECK_CMD=["CMD", "mongosh", "--file", "/mongo-healthcheck.js"]
MONGO_HEALTHCHECK_INTERVAL=15s
MONGO_HEALTHCHECK_TIMEOUT=10s
MONGO_HEALTHCHECK_RETRIES=10
MONGO_HEALTHCHECK_START_PERIOD=45s

# Resource Limits (lighter for development)
MONGO_MEMORY_LIMIT=512M
MONGO_MEMORY_RESERVATION=256M
SERVER_MEMORY_LIMIT=1G
SERVER_MEMORY_RESERVATION=512M
UI_MEMORY_LIMIT=256M
UI_MEMORY_RESERVATION=128M

# Logging (local driver for development)
LOGGING_DRIVER=local
LOG_MAX_SIZE=50m
LOG_MAX_FILE=2 