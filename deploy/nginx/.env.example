# Nginx Production Environment Configuration
# Copy this file to .env and update with your domain settings

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
# Primary domain (e.g., prod.xians.ai)
DOMAIN=prod.xiansai.net

# Additional subdomains (automatically configured)
# - Main app: https://${DOMAIN}
# - API: https://api.${DOMAIN}
# - Auth: https://auth.${DOMAIN}
# - Temporal: https://temporal.${DOMAIN}

# =============================================================================
# SSL CERTIFICATE CONFIGURATION
# =============================================================================
# Email for Let's Encrypt certificate registration
LETSENCRYPT_EMAIL=admin@xians.ai

# Set to "true" for Let's Encrypt staging (testing)
# Set to "false" for production certificates
STAGING=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate limiting (requests per second)
RATE_LIMIT_UI=10
RATE_LIMIT_API=30
RATE_LIMIT_AUTH=5

# Client max body size for uploads
CLIENT_MAX_BODY_SIZE=100M

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Docker network name (should match main docker-compose.yml)
NETWORK_NAME=xians-community-edition-network

# =============================================================================
# SERVICE PORTS (Internal Docker network)
# =============================================================================
# These are the internal ports that Nginx will proxy to
UI_PORT=8080
SERVER_PORT=8080
KEYCLOAK_PORT=8080
TEMPORAL_PORT=8080

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=warn
ACCESS_LOG=on
ERROR_LOG=on
