# MongoDB Authentication Configuration Template
# This file will be copied to .env.local and populated with secure passwords by create-secrets.sh

# MongoDB Root User (Admin) - Full administrative access
MONGO_INITDB_ROOT_USERNAME=xiansai_admin
MONGO_INITDB_ROOT_PASSWORD=

# MongoDB Application User - Read/write access to application database
MONGO_APP_USERNAME=xiansai_app
MONGO_APP_PASSWORD=

# MongoDB Database Name
MONGO_DB_NAME=xians

# Memory limits (optional - can be overridden in root .env or docker-compose)
MONGO_MEMORY_LIMIT=512M
MONGO_MEMORY_RESERVATION=256M
